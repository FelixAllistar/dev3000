{
  "name": "dev-playwright",
  "version": "0.0.10",
  "description": "AI-powered development tools with browser monitoring and MCP server integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dev-playwright": "dist/cli.js"
  },
  "files": [
    "dist/",
    "mcp-server/app/",
    "mcp-server/package.json",
    "mcp-server/tsconfig.json",
    "mcp-server/next.config.ts",
    "mcp-server/next-env.d.ts",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "postinstall": "cd mcp-server && npm install",
    "release": "npm run build && npm version patch && git push origin main --tags && npm publish --otp=$OTP"
  },
  "keywords": [
    "nextjs",
    "ai",
    "development",
    "playwright",
    "mcp",
    "browser-monitoring",
    "debugging",
    "claude"
  ],
  "dependencies": {
    "playwright": "^1.49.0",
    "mcp-handler": "^1.0.2",
    "zod": "^3.22.4",
    "chalk": "^5.3.0",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "tsx": "^4.20.3",
    "@types/node": "^22.8.7",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elsigh/dev-playwright.git"
  },
  "author": "Lindsey Simon <elsigh@gmail.com>",
  "license": "MIT"
}
